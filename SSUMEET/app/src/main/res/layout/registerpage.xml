<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/watermelonPink"
        android:elevation="4dp">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/deepPink"
            android:background="?attr/actionModeCloseDrawable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회 원 가 입"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"/>
    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="70dp"
    android:layout_width="match_parent"
    android:layout_height="520dp"
    android:orientation="vertical"
    android:background="@drawable/box_contain"
    android:backgroundTint="#FFA500">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="20dp"/>
        <EditText
            android:layout_marginLeft="30dp"
            android:id="@+id/id"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@ soongsil.ac.kr"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 인증"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:backgroundTint="#FF69B4"
        android:background="@drawable/roundbutton"/>


    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호"
            android:textSize="20dp"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/checkNum"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="20dp"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/pw"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pwCheck"
            android:layout_width="230dp"
            android:layout_marginLeft="120dp"
            android:hint="비밀번호 확인"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/setImage"/>

    </LinearLayout>
    <Button
        android:id="@+id/register_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#FF69B4"
        android:background="@drawable/roundbutton"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="가입하기"/>
</LinearLayout>



</LinearLayout>